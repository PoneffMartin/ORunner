<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rv_recent_exercises"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        />

    <RelativeLayout
        android:id="@+id/rl_no_activities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_above="@+id/tv_no_activity"
            android:layout_centerHorizontal="true"
            android:src="@drawable/empty_state"
            />
        <TextView
            android:id="@+id/tv_no_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/no_activities"
            android:textColor="#DAFFFFFF"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_activity_hint"
            android:textColor="#DAFFFFFF"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_no_activity"
            />
    </RelativeLayout>
</RelativeLayout>
